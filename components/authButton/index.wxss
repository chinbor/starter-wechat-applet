/* components/authButton/index.wxss */
.login-btn {
  overflow: visible;
  position: relative;
  padding: 0;
  margin: 0;
  background-color: transparent;
  text-align: inherit;
  font-size: medium;
  line-height: normal;
}

.login-btn::after {
  border: none;
}

.cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
